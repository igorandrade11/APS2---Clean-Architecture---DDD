@model ProductManagement.Application.DTOs.CreateProductDto

<h1>Adicionar Produto</h1>

<form asp-action="Create" method="post">
    <div>
        <label>Nome</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label>Descrição</label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label>Preço</label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label>Quantidade</label>
        <input asp-for="StockQuantity" type="number" />
        <span asp-validation-for="StockQuantity"></span>
    </div>
    <div>
        <label>Categoria</label>
        <input asp-for="Category" />
        <span asp-validation-for="Category"></span>
    </div>
    <button type="submit">Salvar</button>
    <a href="@Url.Action("Index")">Cancelar</a>
</form>
