@model IEnumerable<ProductManagement.Application.DTOs.CategoryDto>

@{
    ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nova Categoria</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="categoryList">
        @foreach(var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-secondary">Editar</a>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
